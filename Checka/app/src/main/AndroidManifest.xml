<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programrabbit.checka">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_checka"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_checka_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DetailPriceActivity" />
        <activity android:name=".DetailFuelActivity" />
        <activity android:name=".DetailServiceActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".NewPriceActivity" />
        <activity android:name=".NewServiceActivity" />
        <activity android:name=".CheckPriceActivity" />
        <activity android:name=".CheckServiceActivity" />
        <activity android:name=".NewFuelActivity" />
        <activity android:name=".CheckFuelAcitivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/places_map_key" />

        <activity android:name=".MainActivity" />
    </application>

</manifest>